                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:buttonTint="#FFFFFF"
                android:text="@string/q5_answer2"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/q5_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:buttonTint="#FFFFFF"
                android:text="@string/q5_answer3"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/question6_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="@string/question6"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/q6_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:buttonTint="#FFFFFF"
                android:text="@string/q6_answer1"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/q6_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:buttonTint="#FFFFFF"
                android:text="@string/q6_answer2"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/q6_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:buttonTint="#FFFFFF"
                android:text="@string/q6_answer3"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/finish_quiz_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="#7986CB"
                android:gravity="center"
                android:onClick="finishQuiz"
                android:text="Submit Quiz"
                android:textAllCaps="true" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
